.container
	.row.blog{'ng-controller'=>'frontIndexCtrl', 'ng-init'=>"init(#{@posts.to_json})" }
		.col-lg-3.col-md-3.col-sm-3.col-xs-12
		.col-lg-9.col-md-9.col-sm-9.col-xs-12
			.post{ "ng-repeat" => "post in posts | filter:buscar | interval:interval_a:interval_b "}
				.preview-post.row
					.col-lg-9.col-md-9.col-sm-9.col-xs-12
						%h4.title-post
							= link_to "{{ post.title | uppercase }}", "/blog/posts/{{post.permalink}}"
						.image-post
							%img.thumbnail{ "ng-src" => "{{post.image}}" }
						.content-post{ "ng-bind-html" => "post.content_truncate", style: "text-align:justify;"}
						.read-more.pull-right
							= link_to "#" do
								%i.fa.fa-sign-out
								LEER M√ÅS
					.col-lg-3.col-md-3.col-sm-3.col-xs-12
						%span.date
							{{post.day}}
							%small
								{{post.created_at}}
						%span.info
							%span.block
								%i.fa.fa-user
								POR
								= link_to "{{post.autor | uppercase}}", "#"
							%span.block
								%i.fa.fa-folder-open-o
								POSTEADO EN
								= link_to "{{post.category_name | uppercase}}", "#"
							%span.block
								%i.fa.fa-link
								= link_to "PERMALINK", "/blog/posts/{{post.permalink}}"

					
