.col-lg-9.col-md-9.col-sm-9.col-xs-12
	.post
		.preview-post.row{ "ng-if" => "posts.publicate == true"}
			.col-lg-9.col-md-9.col-sm-9.col-xs-12
				%h4.title-post
					= link_to "{{ posts.title | uppercase }}", "/blog/posts/{{post.permalink}}"
				.image-post
					%img.thumbnail{ "ng-src" => "{{posts.image}}", alt: "{{posts.title}}", title: "{{posts.title}}" }
				.content-post{ "ng-bind-html" => "posts.content", style: "text-align:justify;"}
				.row.socials{ "ng-if" => "posts.shared_enabled == true" }
					.col-sm-12.col-md-12.col-sm-12.col-xs-12.socials-shared{ style: "margin-bottom: 15px;"}
						.col-xs-2.col-sm-3.col-md-3.col-lg-2.links-socials#social-facebook
							#fb-root
								.fb-like{"data-action" => "like", "data-href" => "#{request.url}", "data-layout" => "button_count", "data-share" => "false", "data-show-faces" => "true"}
						.col-xs-2.col-sm-3.col-md-3.col-lg-2.links-socials#social-gplus
							.g-plus{"data-action"=>"share", "data-annotation"=>"bubble"}
						.col-xs-2.col-sm-3.col-md-3.col-lg-2.links-socials#social-twitter
							= link_to "Twittear", "https://twitter.com/share", class: "twitter-share-button", "data-lang" => "es", "data-text" => "#parcatur #{@post.title}", "data-url" => "#{request.url}", "data-via" => "parcatur"
				.comments{ "ng-if" => "posts.comments_open == true" }
					#fb-root{ style: "margin-bottom:15px;"}
						.fb-comments{ 'data-href' => "#{request.url}",  'data-numposts' => "8", 'data-colorscheme' => "light", "data-width" => "100%" }
			.col-lg-3.col-md-3.col-sm-3.col-xs-12
				%span.date
					{{posts.day}}
					%small
						{{posts.created_at}}
				%span.info
					%span.block
						%i.fa.fa-user
						POR
						= link_to "{{posts.autor | uppercase}}", "/blog/autor/{{posts.autor_id}}/posts"
					%span.block
						%i.fa.fa-folder-open-o
						POSTEADO EN
						= link_to "{{posts.category_name | uppercase}}", "/blog/category/{{posts.category_permalink}}/posts"
					%span.block
						%i.fa.fa-link
						= link_to "PERMALINK", "/blog/posts/{{posts.permalink}}"

